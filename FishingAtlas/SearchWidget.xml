			<linktext></linktext>
		</layer>
		<layer>
			<name>Emergency</name>
			<url>https://ndismaps.nrel.colostate.edu/ArcGIS/rest/services/HuntingAtlas/CHA_HunterBase_MapFix_UNC/MapServer/26</url>
			<expression>UPPER(Name) LIKE UPPER('%[value]%')</expression>
			<graphicalexpression></graphicalexpression>
